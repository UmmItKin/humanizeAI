---
import '../styles/global.css';
import { Layout } from "@/components/Layout";
import { Button } from "@/components/ui/button";
---

<html lang="en" class="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Home - Astro + TailwindCSS</title>
	</head>

	<body>
		<Layout client:load title="Home">
			<div class="grid place-items-center content-center gap-4">
				<Button>Tailwind Button in Astro!</Button>
				<a href="/markdown-page" class="p-4 underline">Markdown is also supported...</a>
			</div>
		</Layout>
	</body>
</html>
